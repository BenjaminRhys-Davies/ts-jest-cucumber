{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:sonarjs/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "sonarjs"
  ],
  "rules": {
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "*.{test|spec}.{js|ts}"
      ],
      "rules": {
        "sonarjs/no-identical-expressions": [
          0
        ],
        "sonarjs/no-identical-functions": [
          0
        ],
        "sonarjs/no-duplicate-string": [
          0
        ]
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "es6": {
        "extensions": [
          ".{js|ts}"
        ]
      }
    }
  }
}